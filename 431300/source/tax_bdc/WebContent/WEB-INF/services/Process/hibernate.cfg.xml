		<mapping resource="com/sunway/vo/CD004.hbm.xml" />
		<mapping resource="com/sunway/vo/CD005.hbm.xml" />
		<mapping resource="com/sunway/vo/CD006.hbm.xml" />

 -->

	</session-factory>
</hibernate-configuration>